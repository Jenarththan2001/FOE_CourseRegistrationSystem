@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Offering</title>
    <link rel="stylesheet" href="~/css/AdminDashboard_style.css">
    <link rel="stylesheet" href="~/css/CourseOffering.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <span>FOE UOJ</span>
            </div>
            <ul class="nav-links">
                <li><a href="@Url.Action("AdminDashboard", "Admin")"><i class="fas fa-home"></i><span>Dashboard</span></a></li>
                <li><a href="@Url.Action("RegistrationDetails", "Admin")"><i class="fas fa-users"></i><span>Registration Details</span></a></li>
                <li class="active"><a href="@Url.Action("CourseOffering", "Admin")"><i class="fas fa-book"></i><span>Course Offering</span></a></li>
                <li><a href="@Url.Action("AdvisorDetails", "Admin")"><i class="fas fa-chart-line"></i><span>Advisor List</span></a></li>

        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="header">
                <h1>Course Offering</h1>
                <div class="user-info">
                    <div class="profile-pic">
                        <img src="~/images/profile.png" alt="Admin Profile">
                    </div>
                    <span id="admin-name">| Admin: John Doe</span>
                    <span id="date-time">| Date: <span id="current-date"></span> | Time: <span id="current-time"></span></span>
                </div>
            </div>

            <!-- Confirmation Message -->
            <div class="confirmation-message" id="confirmationMessage">
                Registration session created successfully!
            </div>

            <!-- Filter Section -->
            <div class="filter-container">
                <h2>Course Selection Options</h2>
                <div class="filter-row">
                    <div class="filter-group">
                        <label for="semester">Semester</label>
                        <select id="semester">
                            <option value="">Select Semester</option>
                            @for (int i = 1; i <= 8; i++)
                            {
                                    <option value="@i">Semester @i</option>
                            }
                        </select>
                    </div>

                    <div class="filter-group">
                        <label for="department">Department</label>
                        <select id="department">
                            <option value="general">General Program</option>
                            @foreach (var dept in ViewBag.Departments)
                            {
                                    <option value="@dept.DepartmentID">@dept.DepartmentName</option>
                            }
                        </select>
                    </div>

                    <div class="filter-group">
                        <label for="academic-year">Academic Year</label>
                        <select id="academic-year" multiple>
                            @foreach (var year in ViewBag.AcademicYears)
                            {
                                    <option value="@year">@year</option>
                            }
                        </select>
                        <small>Hold CTRL to select multiple years</small>
                    </div>

                    <div class="filter-group">
                        <label for="closing-date">Registration Closing Date</label>
                        <input type="date" id="closing-date">
                    </div>
                </div>
                <button class="btn btn-primary" id="openRegistration">Open Registration</button>
            </div>

            <!-- Courses Table -->
            <div class="courses-container">
                <h2>Available Courses</h2>
                <table class="courses-table">
                    <thead>
                        <tr>
                            <th>Select</th>
                            <th>Course Code</th>
                            <th>Course Name</th>
                            <th>Credits</th>
                            <th>Department</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in ViewBag.Courses)
                        {
                                <tr>
                                    <td><input type="checkbox" class="course-checkbox" data-code="@course.CourseCode"></td>
                                    <td>@course.CourseCode</td>
                                    <td>@course.CourseName</td>
                                    <td>@course.Credit</td>
                                    <td>@course.Department.DepartmentName</td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        // Auto-select General Program for Semesters 1-3
        $("#semester").change(function () {
            let semester = parseInt($(this).val());
            if (semester <= 3) {
                $("#department").val("general").prop("disabled", true);
            } else {
                $("#department").prop("disabled", false);
            }
        });

        // Open Registration - Sends data to AdminController
        $("#openRegistration").click(function () {
            let selectedCourses = [];
            $(".course-checkbox:checked").each(function () {
                selectedCourses.push($(this).data("code"));
            });

            let data = {
                academicYears: $("#academic-year").val(),
                semester: $("#semester").val(),
                departmentId: $("#department").val(),
                closingDate: $("#closing-date").val(),
                selectedCourses: selectedCourses
            };

            $.post("/Admin/CreateRegistrationSession", data, function (response) {
                if (response.success) {
                    $("#confirmationMessage").show().text(response.message);
                    setTimeout(() => $("#confirmationMessage").hide(), 5000);
                } else {
                    alert(response.message);
                }
            });
        });

        // Update Date and Time
        function updateTime() {
            const currentDate = new Date();
            document.getElementById("current-date").textContent = currentDate.toLocaleDateString();
            document.getElementById("current-time").textContent = currentDate.toLocaleTimeString();
        }

        setInterval(updateTime, 1000);
    </script>
</body>
</html>
