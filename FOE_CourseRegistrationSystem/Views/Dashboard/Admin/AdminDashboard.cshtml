@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/AdminDashboard_style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="logo">
                <span>FOE UOJ</span>
            </div>
            <ul class="nav-links">
                <div class="top-links">
                <li class="active">
                    <a href="@Url.Action("AdminDashboard", "Admin")"><i class="fas fa-home"></i><span>Dashboard</span></a>
                </li>
                <li>
                    <a href="@Url.Action("RegistrationDetails", "Admin")"><i class="fas fa-users"></i><span>Registration Details</span></a>
                </li>
                <li>
                    <a href="@Url.Action("CourseOffering","Admin")"><i class="fas fa-book"></i><span>Course Offering</span></a>
                </li>
                <li>
                    <a href="@Url.Action("AdvisorDetails" , "Admin")"><i class="fas fa-chart-line"></i><span>Advisor List</span></a>
                </li>
        </div>
        <div class="bottom-links">
            <li class="bottom-items">
                <a href="@Url.Action("AdminNotification", "Admin")"><i class="fas fa-bell"></i><span>Notifications</span></a>
            </li>
            <li class="bottom-items">
                <a href="#"><i class="fas fa-question-circle"></i><span>Help</span></a>
            </li>
            <li class="bottom-items">
                <a href="~/Account/Login"><i class="fas fa-sign-out-alt"></i><span>Log out</span></a>
            </li>
        </div>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <div class="header">
            <h1>Admin Dashboard</h1>
            <div class="user-info">
                <div class="profile-pic">
                    <img id="admin-profile" src="~/images/profile.png" alt="Admin Profile">
                </div>
                <span id="admin-name">| Admin: John Doe</span>
                <span id="date-time">| Date: <span id="current-date"></span> | Time: <span id="current-time"></span></span>
            </div>
        </div>

        <!-- Personal Details Card (Combined) -->
        <div class="card personal-details-card">
            <div class="card-header">
                <h2>Personal Details</h2>
            </div>
            <div class="card-body">
                <div class="form-columns">
                    <div class="form-column">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input type="text" id="firstName" value="Puvinthan" readonly>
                        </div>
                        <div class="form-group">
                            <label for="lastName">Last Name:</label>
                            <input type="text" id="lastName" value="Selvanayakam" readonly>
                        </div>
                        <div class="form-group">
                            <label for="staffID">Staff ID:</label>
                            <input type="text" id="staffID" value="18" readonly>
                        </div>
                        <div class="form-group">
                            <label for="nic">NIC:</label>
                            <input type="text" id="nic" value="991234501V" readonly>
                        </div>
                    </div>
                    <div class="form-column">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" id="email" value="puvi@eng.jfn.ac.lk" readonly>
                        </div>
                        <div class="form-group">
                            <label for="phoneNo">Phone No:</label>
                            <input type="text" id="phoneNo" value="0712345678" readonly>
                        </div>
                        <div class="form-group">
                            <label for="gender">Gender:</label>
                            <select id="gender" disabled>
                                <option value="male">Male</option>
                            </select>
                        </div>
                        <div class="form-group edit-button-container">
                            <button class="edit-button" onclick="toggleEdit(this)">Edit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- Dashboard Content -->
        <div class="dashboard-content">
            <!-- Total Users Card -->
            <div class="card total-users-card">
                <h2>Lecturers: 30</h2>
            </div>

            <!-- Registered Students Card -->
            <div class="card registered-students-card">
                <h2>Students: 250</h2>
            </div>

            <!-- Active Courses Card -->
            <div class="card active-courses-card">
                <h2>Active Courses: 24</h2>
            </div>



            <!-- Notifications Card -->
            <div class="card notification-card">
                <div class="notification-content">
                    <p>3 new user registration requests pending approval</p>
                    <i class="fas fa-bell"></i>
                </div>
            </div>
        </div>
    </div>
    </div>

    <script>
             function toggleEdit(button) {
            const cardBody = button.closest('.card-body');
            const isReadOnly = cardBody.querySelector('#firstName').readOnly;

            // Toggle read-only state for input elements
            const inputs = cardBody.querySelectorAll('input[type="text"], input[type="email"], select');
            inputs.forEach(input => {
                input.readOnly = !isReadOnly;
                input.disabled = !isReadOnly; // Also toggle the disabled state for select elements
            });

            // Change appearance based on edit mode
            if (isReadOnly) {
                // Change to edit mode
                button.textContent = 'Save';
                cardBody.classList.add('edit-mode'); // Add class for edit mode styles
            } else {
                // Change to read-only mode
                button.textContent = 'Edit';
                cardBody.classList.remove('edit-mode'); // Remove edit mode styles
            }
        }
        function updateTime() {
            const currentDate = new Date();
            document.getElementById("current-date").textContent = currentDate.toLocaleDateString();
            document.getElementById("current-time").textContent = currentDate.toLocaleTimeString();
        }

        // Update time every second
        setInterval(updateTime, 1000);

        // Initial call to set the time immediately
        updateTime();

        
    </script>
</body>

</html>